<?xml version="1.0" encoding="utf-8"?>
<layout
				xmlns:android="http://schemas.android.com/apk/res/android"
>
	<data>
		<variable name="onClickReadMoreTweetItem" type="android.view.View.OnClickListener"/>
	</data>
	<RelativeLayout
					android:id="@+id/read_more_tweet_item"
					android:layout_width="match_parent"
					android:layout_height="70dp"
	        android:background="@android:color/darker_gray"
	        android:onClick="@{onClickReadMoreTweetItem}"
	>
		<TextView
						android:id="@+id/display_middle_tweet_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerHorizontal="true"
						android:layout_centerVertical="true"
						android:textSize="18sp"
						android:text="@string/display_middle_tweet"
		/>

	</RelativeLayout>
</layout>