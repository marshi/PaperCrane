<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context="application.android.marshi.papercrane.activity.TweetEditorActivity"
>

	<EditText
					android:id="@+id/tweet_editor"
					android:layout_width="match_parent"
					android:layout_height="150dp"
					android:inputType="none"
					android:ems="10"
					android:layout_alignParentTop="true"
					android:layout_alignParentEnd="true"
					android:gravity="top|start"
	        android:background="@drawable/frame_blank"
	/>
	<ImageView
					android:id="@+id/editor_divider"
					android:src="@android:drawable/divider_horizontal_textfield"
					android:scaleType="fitXY"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tweet_editor"
					android:layout_alignParentStart="true"
	/>
	<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tweet_button"
					android:textColor="#fff"
					android:background="@drawable/shape_rounded_corners"
					android:backgroundTint="?android:attr/colorPrimary"
					android:layout_below="@+id/editor_divider" android:layout_alignParentEnd="true"
					android:layout_marginTop="3dp"
					android:text="ツイート"
	/>
</RelativeLayout>
